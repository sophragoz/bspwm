(defwidget power-w []
  (box :orientation "h"
       (button :class "power-off-w"
               :onclick "/usr/sbin/poweroff"
               "")
       (button :class "reboot-w"
               :onclick "/usr/sbin/reboot"
               "󰑓")
       (button :class "exit-w"
               :onclick "bspc quit"
               "󰈆")
       (button :class "lock-w"
               :onclick "eww close menu & ~/.config/eww/widgets/lock/scripts/start.sh"
               "")))             
